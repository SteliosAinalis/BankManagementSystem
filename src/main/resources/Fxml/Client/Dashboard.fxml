<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="dashboard" stylesheets="@../../Styles/DashBoard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stelios.bankmanagementsystem.Controllers.Client.DashboardController">
    <!-- TOP SECTION: Welcome and Date -->
    <Text fx:id="user_name" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="user_name" text="Hi, Stelios" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="30.0" />
    <Label fx:id="login_date" styleClass="date_lbl" text="Today, 2025-11-21" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="27.0" />

    <!-- ACCOUNTS SECTION -->
    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="section_title" text="My Accounts" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="90.0" />
    <HBox layoutX="47.0" layoutY="152.0" prefHeight="180.0" prefWidth="620.0" styleClass="accounts_view" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="120.0">
        <children>
            <AnchorPane prefHeight="150.0" prefWidth="295.0">
                <children>
                    <Label fx:id="checking_bal" layoutX="14.0" layoutY="21.0" styleClass="account_balance" text="\$5100.56" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="25.0" />
                    <Label layoutX="27.0" layoutY="104.0" styleClass="account_number" text="**** **** **** " AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="14.0" />
                    <Label fx:id="checking_acc_num" layoutX="106.0" layoutY="118.0" styleClass="account_number" text="3691" AnchorPane.bottomAnchor="47.0" AnchorPane.leftAnchor="138.0" />
                    <VBox layoutX="188.0" layoutY="-20.0" prefHeight="100.0" prefWidth="35.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="14.0" />
                    <FontAwesomeIconView glyphName="BANK" layoutX="225.0" layoutY="47.0" size="30" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="7.0" />
                    <Text layoutX="14.0" layoutY="162.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Checking Account" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="14.0" />
                </children>
                <styleClass>
                    <String fx:value="account_gradient" />
                    <String fx:value="account" />
                </styleClass>
            </AnchorPane>
            <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="150.0" prefWidth="295.0">
                <children>
                    <Label fx:id="savings_bal" layoutX="14.0" layoutY="21.0" styleClass="account_balance" text="\$25000.00" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="25.0" />
                    <Label layoutX="27.0" layoutY="104.0" styleClass="account_number" text="**** **** **** " AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="14.0" />
                    <Label fx:id="savings_acc_num" layoutX="106.0" layoutY="118.0" styleClass="account_number" text="3691" AnchorPane.bottomAnchor="47.0" AnchorPane.leftAnchor="138.0" />
                    <VBox layoutX="188.0" layoutY="-20.0" prefHeight="100.0" prefWidth="35.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="14.0" />
                    <FontAwesomeIconView glyphName="BANK" layoutX="225.0" layoutY="47.0" size="30" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="7.0" />
                    <Text layoutX="14.0" layoutY="162.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Savings Account" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="14.0" />
                </children>
                <styleClass>
                    <String fx:value="account" />
                    <String fx:value="account_gradient" />
                </styleClass>
            </AnchorPane>
        </children>
    </HBox>

    <!-- INCOME/EXPENSE SUMMARY -->
    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="section_title" text="Accounts Summary" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="90.0" />
    <VBox layoutX="671.0" layoutY="110.0" prefHeight="180.0" prefWidth="210.0" styleClass="summary_view" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="120.0">
        <children>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="acc_summary_container">
                <children>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Income" />
                    <Label fx:id="income_lbl" styleClass="income_amount" text="+ $1250.00" />
                    <Line endX="160.0" />
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Expenses" />
                    <Label fx:id="expense_lbl" styleClass="expense_amount" text="- $599.32" />
                </children>
            </VBox>
        </children>
    </VBox>

    <!-- BOTTOM SECTION TITLES -->
    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="section_title" text="Latest Transactions" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="340.0" />
    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="section_title" text="Net Worth" AnchorPane.leftAnchor="330.0" AnchorPane.topAnchor="340.0" />
    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="section_title" text="Quick Transfer" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="340.0" />

    <!-- LATEST TRANSACTIONS LISTVIEW -->
    <ListView fx:id="transaction_listview" layoutX="20.0" layoutY="378.0" prefHeight="365.0" prefWidth="300.0" styleClass="transaction_listview" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="20.0" />

    <!-- QUICK TRANSFER FORM -->
    <VBox layoutX="654.0" layoutY="402.0" prefHeight="366.0" prefWidth="240.0" styleClass="new_trans_container" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="10.0">
        <children>
            <Label text="Payee Address" />
            <TextField fx:id="payee_fld" />
            <Label text="Amount " />
            <TextField fx:id="amount_fld" />
            <Label text="Message (Optional)" />
            <TextArea fx:id="message_fld" prefHeight="70.0" prefWidth="200.0" />
            <Button fx:id="send_money_btn" mnemonicParsing="false" text="Send Money" />
        </children>
    </VBox>

    <!-- ========================================================= -->
    <!-- CORRECTED NET WORTH CHART SECTION                         -->
    <!-- ========================================================= -->
    <VBox layoutX="330.0" layoutY="371.0" prefHeight="366.0" prefWidth="300.0" spacing="10.0" styleClass="chart-container" AnchorPane.bottomAnchor="14.0">
        <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
                <children>
                    <Region HBox.hgrow="ALWAYS" />
                    <!-- The ToggleButtons are now direct children of the HBox -->
                    <ToggleButton fx:id="oneMonthBtn" mnemonicParsing="false" selected="true" text="1M">
                        <toggleGroup>
                            <!-- The ToggleGroup is defined here, inside the first button -->
                            <ToggleGroup fx:id="timeRangeToggleGroup" />
                        </toggleGroup>
                    </ToggleButton>
                    <!-- The other buttons just reference the group using its fx:id -->
                    <ToggleButton fx:id="sixMonthsBtn" mnemonicParsing="false" text="6M" toggleGroup="$timeRangeToggleGroup" />
                    <ToggleButton fx:id="ytdBtn" mnemonicParsing="false" text="YTD" toggleGroup="$timeRangeToggleGroup" />
                    <ToggleButton fx:id="oneYearBtn" mnemonicParsing="false" text="1Y" toggleGroup="$timeRangeToggleGroup" />
                </children>
            </HBox>
            <LineChart fx:id="netWorthChart" animated="true" VBox.vgrow="ALWAYS">
                <xAxis>
                    <CategoryAxis side="BOTTOM" fx:id="xAxis" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" side="LEFT" />
                </yAxis>
            </LineChart>
        </children>
    </VBox>
</AnchorPane>
