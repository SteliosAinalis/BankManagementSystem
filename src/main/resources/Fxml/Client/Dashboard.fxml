            <FontAwesomeIconView glyphName="BANK" layoutX="225.0" layoutY="47.0" size="30" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="7.0" />
            <Text layoutX="14.0" layoutY="162.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Checking Account" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="14.0" />
        </AnchorPane>
        <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="150.0" prefWidth="295.0">
            <styleClass>
                <String fx:value="account" />
                <String fx:value="account_gradient" />
            </styleClass>
            <Label fx:id="savings_bal" layoutX="14.0" layoutY="21.0" styleClass="account_balance" text="\$25000.00" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="25.0" />
