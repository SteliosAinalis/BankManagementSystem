        <TextField fx:id="amount_fld" />
        <Label text="Message (Optional)" />
        <TextArea fx:id="message_fld" prefHeight="70.0" prefWidth="200.0" />
        <Button fx:id="send_money_btn" mnemonicParsing="false" text="Send Money" />
    </VBox>

    <VBox layoutX="370.0" layoutY="371.0" prefHeight="366.0" prefWidth="260.0" spacing="10.0" styleClass="snapshot-container" AnchorPane.bottomAnchor="14.0">
        <HBox alignment="CENTER_LEFT">
            <ToggleButton fx:id="income_btn" mnemonicParsing="false" selected="true" text="Income">
                <toggleGroup>
                    <ToggleGroup fx:id="snapshot_toggle_group" />
                </toggleGroup>
            </ToggleButton>
            <Region HBox.hgrow="ALWAYS" />
            <ToggleButton fx:id="spending_btn" mnemonicParsing="false" text="Spending" toggleGroup="$snapshot_toggle_group" />
        </HBox>
        <StackPane VBox.vgrow="ALWAYS">
            <PieChart fx:id="income_pie_chart" animated="true" />
            <PieChart fx:id="spending_pie_chart" animated="true" visible="false" />
        </StackPane>
    </VBox>
