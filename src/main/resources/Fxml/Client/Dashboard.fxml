            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Expenses" />
            <Label fx:id="expense_lbl" styleClass="expense_amount" text="- $599.32" />
        </VBox>
    </VBox>

    <!-- BOTTOM SECTION TITLES -->
    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="section_title" text="Latest Transactions" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="340.0" />
   <Text layoutX="10.0" layoutY="10.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="section_title" text="Review " AnchorPane.leftAnchor="380.0" AnchorPane.topAnchor="340.0" />
