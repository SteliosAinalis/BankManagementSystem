<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>

<HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="friend-cell-container" stylesheets="@../../Styles/FriendCell.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
        <ImageView fx:id="profile_pic_image" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="false">
            <clip>
                <Circle centerX="20.0" centerY="20.0" radius="20.0" />
            </clip>
        </ImageView>
    <Label fx:id="payee_address_lbl" styleClass="payee-address" text="\@payeeAddress" />

    <Region HBox.hgrow="ALWAYS" />


    <Button fx:id="remove_friend_btn" mnemonicParsing="false" styleClass="remove-friend-button">
        <graphic>
            <FontAwesomeIconView glyphName="TRASH" styleClass="glyph-icon" />
        </graphic>
    </Button>
</HBox>
